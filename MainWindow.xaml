<Window x:Class="CardPickerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardPickerUI"
        mc:Ignorable="d"
        Title="Wybieranie kart" Height="350" Width="800">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25">
            <Label Content="Ile kart wylosować?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22"/>
            <Slider x:Name="numberOfCards" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Width="186" Panel.ZIndex="1" MinWidth="6" Maximum="15" Minimum="1" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
